@model W24_TP_Forum_2210075.Models.Message

@{
    ViewData["Title"] = "Delete";
}


<div class="justify-content-center d-flex">
    <div class="container" style="width:1000px">
        <div class="d-flex justify-content-between">
            <div>
                <h4 class="mt-5">Are you sure you want to delete this message?</h4>
            </div>
            <div>
                <a asp-controller="Messages" asp-action="Index" asp-route-cid="@ViewData["CatId"]" asp-route-sid="@Model.SujetId" class="btn btn-primary mt-5">Back to Messages</a>
            </div>
        </div>
        <hr />
        <div class="mt-4">
            <dl class="row">
                <dt class="col-sm-2 mb-3">
                    User Name
                </dt>
                <dd class="col-sm-10 mb-3">
                    @Model.User.UserName
                </dd>
                <dt class="col-sm-2 mb-3">
                    Subject
                </dt>
                <dd class="col-sm-10 mb-3">
                    @Model.Sujet.SujetNom
                </dd>
                <dt class="col-sm-2 mb-3">
                    Message
                </dt>
                <dd class="col-sm-10 mb-3">
                    @Html.Raw(Model.MsgTexte)
                </dd>
                <dt class="col-sm-2 mb-3">
                    Date
                </dt>
                <dd class="col-sm-10 mb-3">
                    @Model.MsgDate
                </dd>

            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MsgId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>



