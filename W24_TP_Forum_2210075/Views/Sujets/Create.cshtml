@using System.Security.Claims
@model W24_TP_Forum_2210075.Models.Sujet

<div class="justify-content-center d-flex">
    <div class="container" style="width:1000px">
         <div class="d-flex justify-content-between">
            <div>
                <h1 class="mt-5">Create</h1>
            </div>
            <div>
                <a asp-controller="Sujets" asp-action="ShowResult" asp-route-cid="@ViewData["CatId"]" class="btn btn-primary mt-5">Back to Subjects</a>
            </div>
        </div>
        <hr />
        <div class="mt-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                  <input hidden asp-for="CatId" value="@ViewData["CatId"]" />

                <div class="form-group mb-3">
                    <label asp-for="SujetNom" class="control-label">Subject</label>
                    <input asp-for="SujetNom" class="form-control input" />
                    <span asp-validation-for="SujetNom" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>


    </div>
</div>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
