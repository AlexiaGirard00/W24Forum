@model W24_TP_Forum_2210075.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="justify-content-center d-flex">
    <div class="container" style="width:1000px">
        <div class="d-flex justify-content-between">
            <div>
                <h3 class="mt-5">Are you sure you want to delete this category ?</h3>
            </div>
            <div>
                <a asp-controller="Categories" asp-action="Details" asp-route-id="@Model?.CatId" class="btn btn-primary mt-5">Back to Details</a>
            </div>
        </div>
        <hr />
        <div class="mt-4">
            <div>
                <dl class="row mb-3">
                    <dt class="col-sm-2 mb-3">
                        Name
                    </dt>
                    <dd class="col-sm-10 mb-3">
                        @Model.CatNom
                    </dd>
                    <dt class="col-sm-2 mb-3">
                        Description
                    </dt>
                    <dd class="col-sm-10 mb-3">
                        @Html.Raw(Model.CatDesc)
                    </dd>
                    <dt class="col-sm-2 mb-3">
                        Active
                    </dt>
                    <dd class="col-sm-10 mb-3">
                        @Model.CatActif
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="CatId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />

                </form>
            </div>
        </div>
    </div>
</div>




